<Window x:Class="Tehtava07.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tehtava07"
        mc:Ignorable="d"
        Title="Simple Password Strenght Checker" Height="350" Width="525">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel>
                <TextBlock FontSize="15">Tarkistettava salasana:....</TextBlock>
                <TextBox x:Name="txtPassword" TextChanged="txtPassword_TextChanged"/>
                <TextBlock FontSize="15" x:Name="txtMarks" Text="...."/>
                <TextBlock FontSize="15" x:Name="txtBig" Text="...."/>
                <TextBlock FontSize="15" x:Name="txtSmall" Text="...."/>
                <TextBlock FontSize="15" x:Name="txtNumber" Text="...."/>
                <TextBlock FontSize="15" x:Name="txtSpecial" Text="...."/>
                <TextBlock  x:Name="txtColor" Background="Gray" Height="177" Text="Anna Salasana" FontSize="60" TextAlignment="Center"></TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
